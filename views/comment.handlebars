<div class="d-flex card justify-content-center mx-3" style="width: 70%;">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{content}}</p>
    <p>Written by: {{user.username}}</p>
  </div>

    {{#each comments as |comment|}}
    <p>{{comment.content}}</p>
    {{/each}}

  <form class="form comment-form mx-3" style="width:fit-content">
    <div class="form-group">
      <label for="post-comment">Comment Below:</label>
      <input class="form-input" type="text" id="post-comment" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>


</div>

<script src="/js/comment.js"></script>