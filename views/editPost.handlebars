<div class="container">
  <h1>Edit Post</h1>
  <form class="form edit-form" style="width:fit-content">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <textarea class="form-input" type="text" id="post-title" />{{title}}</textarea>
    </div>
    <div class="form-group">
      <label for="post-content">Body:</label>
      <textarea class="form-input" type="text" id="post-content" />{{content}}</textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Post Edit</button>
    </div>
  </form>
  <button class="btn btn-primary" id="deletePost">Delete Post</button>
</div>
<script src="/js/edit.js"></script>